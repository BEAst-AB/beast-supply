<?xml version="1.0" encoding="UTF-8"?>
<!--BII2-T19-R030-->
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0"
	configuration="peppolbis-t19-base-3.0">
	<assert>
		<description>Verify minimum quantity greater than zero</description>
		<scope>PEPPOL-T19-R009</scope>
	</assert>

	<test id="1">
		<assert>
			<success>PEPPOL-T19-R009</success>
		</assert>
		<Catalogue xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
				xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
				xmlns="urn:oasis:names:specification:ubl:schema:xsd:Catalogue-2">

			<cac:CatalogueLine>
					<cbc:MinimumOrderQuantity unitCode="XPK">10</cbc:MinimumOrderQuantity>
			</cac:CatalogueLine>

		</Catalogue>
	</test>

	<test id="2">
		<assert>
			<success>PEPPOL-T19-R009</success>
		</assert>
		<Catalogue xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
				xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
				xmlns="urn:oasis:names:specification:ubl:schema:xsd:Catalogue-2">

			<cac:CatalogueLine>
					<cbc:MinimumOrderQuantity unitCode="XPK">0</cbc:MinimumOrderQuantity>
			</cac:CatalogueLine>

		</Catalogue>
	</test>

	<test id="3">
		<assert>
			<error>PEPPOL-T19-R009</error>
		</assert>
		<Catalogue xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
				xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
				xmlns="urn:oasis:names:specification:ubl:schema:xsd:Catalogue-2">

			<cac:CatalogueLine>
					<cbc:MinimumOrderQuantity unitCode="XPK">-1</cbc:MinimumOrderQuantity>
			</cac:CatalogueLine>

		</Catalogue>
	</test>

</testSet>
